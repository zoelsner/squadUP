<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zalone.squadup.views.AskWantToSquadUpActivity"
    android:background="@color/darkPurple"
    android:gravity="center"
    android:padding="30dp">

    <TextView
        android:id="@+id/doYouWantTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Do you want to" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doYouWantTo"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/yesTryingToSquadUp"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/flat_button"
        android:gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="YES" />

    <TextView
        android:id="@+id/noNotTryingToSquadUp"
        android:layout_below="@id/yesTryingToSquadUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/flat_button"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="NO" />

</RelativeLayout>
